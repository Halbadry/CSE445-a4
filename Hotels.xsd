<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">

  <xsd:element name="Hotels">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="Hotel" type="Hotel" minOccurs="1" maxOccurs="unbounded"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:complexType name="Hotel">
    <xsd:sequence>
      <xsd:element name="Name" type="xsd:string" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="Phone" type="PhoneType" minOccurs="1" maxOccurs="unbounded"/>
      <xsd:element name="Address" type="Address" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="Rating" type="xsd:float" minOccurs="0" maxOccurs="1"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="Address">
    <xsd:attribute name="number" type="xsd:integer" use="required"/>
    <xsd:attribute name="street" type="xsd:string" use="required"/>
    <xsd:attribute name="city" type="xsd:string" use="required"/>
    <xsd:attribute name="state" type="xsd:string" use="required"/>
    <xsd:attribute name="zip" type="xsd:integer" use="required"/>
    <xsd:attribute name="nearstAirport" type="xsd:string" use="required"/>
  </xsd:complexType>

  <xsd:simpleType name="PhoneType">
    <xsd:restriction base="xsd:string">
      <xsd:pattern value="\d{3}-\d{3}-\d{4}"/>
    </xsd:restriction>
  </xsd:simpleType>

</xsd:schema>
